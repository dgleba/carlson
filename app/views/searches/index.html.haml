.container-fluid

.row
  .col-sm-2.col-md-3.col-lg-3{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_search_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= Search.model_name.human
  .col-sm-4.col-md-4.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :clocknum_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    %a{:href => "#"} Search-2(ComingSoon)

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    = page_entries_info @searches, :entry_name => 'item'
            
= paginate @searches
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :clocknum, Search.human_attribute_name(:clocknum))
      %th= sort_link(@q, :employee, Search.human_attribute_name(:employee))
      %th= sort_link(@q, :training_date, Search.human_attribute_name(:training_date))
      %th= sort_link(@q, :course_name, Search.human_attribute_name(:course_name))

  %tbody
    - @searches.each do |search|
      %tr
        %td= link_to t('actions.show'), search, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_search_path(search)
        %td= search.clocknum
        %td= search.employee
        %td= search.training_date
        %td= search.course_name

= paginate @searches

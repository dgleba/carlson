.container-fluid

.row
  .col-sm-2.col-md-3.col-lg-3{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_search_test_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= SearchTest.model_name.human
  .col-sm-4.col-md-4.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :clocknum_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    %a{:href => "#"} Search-2(ComingSoon)

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    = page_entries_info @search_tests, :entry_name => 'item'
            
= paginate @search_tests
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :clocknum, SearchTest.human_attribute_name(:clocknum))
      %th= sort_link(@q, :employee, SearchTest.human_attribute_name(:employee))
      %th= sort_link(@q, :training_date, SearchTest.human_attribute_name(:training_date))
      %th= sort_link(@q, :course_name, SearchTest.human_attribute_name(:course_name))

  %tbody
    - @search_tests.each do |search_test|
      %tr
        %td= link_to t('actions.show'), search_test, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_search_test_path(search_test)
        %td= search_test.clocknum
        %td= search_test.employee
        %td= search_test.training_date
        %td= search_test.course_name

= paginate @search_tests

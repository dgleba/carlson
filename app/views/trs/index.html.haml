.container-fluid

.row
  .col-sm-2.col-md-3.col-lg-3{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_tr_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= Tr.model_name.human
  .col-sm-4.col-md-4.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :name_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    %a{:href => "#"} Search-2(ComingSoon)

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    = page_entries_info @trs, :entry_name => 'item'
            
= paginate @trs
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :name, Tr.human_attribute_name(:name))
      %th= sort_link(@q, :active_status, Tr.human_attribute_name(:active_status))
      %th= sort_link(@q, :sort, Tr.human_attribute_name(:sort))

  %tbody
    - @trs.each do |tr|
      %tr
        %td= link_to t('actions.show'), tr, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_tr_path(tr)
        %td= tr.name
        %td= tr.active_status
        %td= tr.sort

= paginate @trs

.container-fluid
  %h3 &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp Hours Trained by Month
  /= line_chart TrTrainingEmployee.joins(:tr_training_record).where('tr_training_records.training_date >= ?', Date.today.at_beginning_of_month - 1.year).group("YEAR(tr_training_records.training_date)").group("MONTH(tr_training_records.training_date)").sum("tr_training_records.hours_trained") ,xtitle:'Month', ytitle:'Training Hours in Total', label: "hours", width: "900px", height: "610px"
  = line_chart TrTrainingEmployee.joins(:tr_training_record).group_by_month(:training_date, range: 12.months.ago.at_beginning_of_month..Date.today).sum("tr_training_records.hours_trained") ,xtitle:'Month', ytitle:'Training Hours in Total', label: "hours", width: "900px", height: "610px"
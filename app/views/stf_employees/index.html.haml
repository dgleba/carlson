.container-fluid

.row
  .col-sm-2.col-md-3.col-lg-3{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_stf_employee_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= StfEmployee.model_name.human
  .col-sm-4.col-md-4.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :clocknum_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    %a{:href => "#"} Search-2(ComingSoon)

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    = page_entries_info @stf_employees, :entry_name => 'item'
            
= paginate @stf_employees
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :clocknum, StfEmployee.human_attribute_name(:clocknum))
      %th= sort_link(@q, :name, StfEmployee.human_attribute_name(:name))
      %th= sort_link(@q, :active_status, StfEmployee.human_attribute_name(:active_status))
      %th= sort_link(@q, :sort, StfEmployee.human_attribute_name(:sort))

  %tbody
    - @stf_employees.each do |stf_employee|
      %tr
        %td= link_to t('actions.show'), stf_employee, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_stf_employee_path(stf_employee)
        %td= stf_employee.clocknum
        %td= stf_employee.name
        %td= stf_employee.active_status
        %td= stf_employee.sort

= paginate @stf_employees

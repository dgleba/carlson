!!!
%html
  %head
    %meta{:charset => "utf-8"}
      / %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
      %meta{:content => "width=450, initial-scale=1.67", :name => "viewport"}
        / %meta{:content => "width=500, initial-scale=1", :name => "viewport"}
        / %meta{:content => "width=500px, initial-scale=1", :name => "viewport"}
        %title Carlson
        /
          Carlson
          version: #{Rails.application.config.version} (#{l(Rails.application.config.version_time)})

        = stylesheet_link_tag    'application', media: 'all'
        = javascript_include_tag 'application'
        /[if lt IE 9]
        /  %script{:src => "http://cdnjs.cloudflare.com/ajax/libs/es5-shim/2.0.8/es5-shim.min.js"}
        = csrf_meta_tags
  %body{class: "#{controller.controller_name}"}
    / switch between fixed which always shows on the screen to scrolling - static top. will have to edit bootstrap_overides.css padding-top
    / %nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
    %nav.navbar.navbar-inverse.navbar-static-top{role: 'navigation'}
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{'aria-controls' => 'navbar', 'aria-expanded' => 'false', 'data-target' => '#navbar', 'data-toggle' => 'collapse', type: 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar


          = link_to 'Carlson', root_path, class: 'navbar-brand'


        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to 'Training Record', tr_training_records_path
            -if current_user && !current_user.sc_regular?
              %li= link_to 'Trained Employees', tr_training_employees_path
              %li= link_to 'Staff List', stf_employees_path
              %li= link_to 'Type', tr_types_path
              %li= link_to 'Customer', tr_customers_path
              %li= link_to 'Program', tr_programs_path
              %li= link_to 'Part', tr_parts_path
              %li= link_to 'Cell', tr_cells_path
              %li= link_to 'Asset', stf_assets_path
              %li= link_to 'Search', search_tests_path

          %ul.nav.navbar-nav.navbar-right

            - if user_signed_in?
              /%span.small{ :style => "color:green;" }Hi  #{current_user.email}.
              /\#{link_to "Edit profile", edit_user_registration_path}
              /\#{link_to "Sign out", destroy_user_session_path, :method => :delete}
            - else
              = link_to "Sign up", new_user_registration_path
              or #{link_to "sign in", new_user_session_path}
            /- flash.each do |name, msg|
            /= content_tag :div, msg, id: "flash_#{name}"


            - if current_user

              %li= link_to 'radmin', rails_admin.index_path('')
              /%li= link_to t('user_sessions.logout'), logout_path, method: :destroy


              %li.dropdown
                %a.dropdown-toggle{ href: "#", data: { toggle: "dropdown" }, role: "button", aria: { expanded: "false" } }
                  %i.fa.fa-user
                  = current_user.email
                  %span.caret
                %ul.dropdown-menu{ role: "menu" }
                  /%li= link_to t('user_sessions.logout'), logout_path, method: :destroy
                  %li= link_to 'tadmin', '/admin'
                  %li= link_to 'Users', users_path
                  %li= link_to "Edit profile", edit_user_registration_path
                  %li= link_to "Sign out", destroy_user_session_path, :method => :delete



    .container-fluid
      - flash.each do |type, msg|
        %div{class: "alert alert-#{type == 'alert' ? 'danger' : 'success'} alert-dismissable", role: 'alert'}
          %button.close{type: 'button', data: {dismiss: 'alert'}, aria: {label: 'Close'}}
            %span{aria: {hidden: 'true'}} &times;
          = msg if msg.is_a?(String)


      = yield

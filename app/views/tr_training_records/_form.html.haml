= simple_form_for(@tr_training_record) do |f|
  = f.error_notification

  .form-inputs
    .well.well-compact{:style => "background-color:#ffe6ff;"}
      %ul.list-inline
        %li
          = f.association :tr_course
        %li
          = f.input :training_date
        %li
          = f.input :hours_trained, label: 'Time required (in hours)'
    = f.input :details_of_training
    = f.input :location
    = f.input :swi
    = f.input :path_to_training_material
    .well.well-compact{:style => "background-color:#ffddcc;"}  
      %ul.list-inline
        %li
          = f.association :tr_type, :as => :collection_select, collection:TrType.order(:name), :label_method => lambda { |tr_type| "#{tr_type.name} " }, label:'Type'
        %li
          = f.association :tr_customer, :as => :collection_select, collection:TrCustomer.order(:name), :label_method => lambda { |tr_customer| "#{tr_customer.name} " }, label:'Customer'
        %li
          = f.association :tr_program, :as => :collection_select, collection:TrProgram.order(:name), :label_method => lambda { |tr_program| "#{tr_program.name} " }, label:'Program'
      %ul.list-inline
        %li
          = f.association :tr_part, :as => :collection_select, collection:TrPart.order(:name), :label_method => lambda { |tr_part| "#{tr_part.name} " }, label:'Part'
        %li
          = f.association :tr_cell, :as => :collection_select, collection:TrCell.order(:name), :label_method => lambda { |tr_cell| "#{tr_cell.name} " }, label:'Cell'
        %li
          = f.association :stf_asset, :as => :collection_select, collection:StfAsset.order(:description), :label_method => lambda { |stf_asset| "#{stf_asset.description}" }, label:'Asset' 
    /= f.association :user
    
    %h3 Training employee
    #tr_training_employees
      = f.simple_fields_for :tr_training_employees do |tr_training_employee|
        = render 'tr_training_employee_fields', f: tr_training_employee, tr_training_employee: f.object
      
      .links
        = link_to_add_association 'add tr_training_employee', f, :tr_training_employees
        

  .form-actions
    = f.button :submit
    &nbsp &nbsp | &nbsp &nbsp
    = link_to t('actions.back'), tr_training_records_path
  %hr